{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Aliases */
    "paths": {
      "~app": ["./src/0_app"],
      "~app/*": ["./src/0_app/*"],

      "~pages": ["./src/1_pages"],
      "~pages/*": ["./src/1_pages/*"],

      "~widgets": ["./src/2_widgets"],
      "~widgets/*": ["./src/2_widgets/*"],

      "~features": ["./src/3_features"],
      "~features/*": ["./src/3_features/*"],

      "~entities": ["./src/4_entities"],
      "~entities/*": ["./src/4_entities/*"],

      "~shared": ["./src/5_shared"],
      "~shared/*": ["./src/5_shared/*"],

      // TODO: remove this alias after full FSD integration
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "types"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
